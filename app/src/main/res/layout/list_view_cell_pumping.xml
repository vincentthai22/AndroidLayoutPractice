<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="This Month" />

    <TextView
        android:id="@+id/weightTotalDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.6"
        android:layout_alignBaseline="@+id/averageWeightDataTextView"
        android:layout_alignBottom="@+id/averageWeightDataTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp" />

    <TextView
        android:id="@+id/averageWeightDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pumpingsDataTextView"
        android:layout_alignBottom="@+id/pumpingsDataTextView"
        android:layout_toStartOf="@+id/weightTotalTextView"
        android:text="0.3" />

    <TextView
        android:id="@+id/pumpingsDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.0"
        android:layout_alignBaseline="@+id/dateTypeTextView"
        android:layout_alignBottom="@+id/dateTypeTextView"
        android:layout_alignEnd="@+id/pumpingsTextView" />

    <TextView
        android:id="@+id/weightTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/averageWeightTextView"
        android:layout_alignBottom="@+id/averageWeightTextView"
        android:layout_marginStart="8dp"
        android:text="oz total"
        android:layout_alignEnd="@+id/weightTotalDataTextView" />

    <TextView
        android:id="@+id/averageWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:text="oz avg"
        android:layout_alignEnd="@+id/averageWeightDataTextView" />

    <TextView
        android:id="@+id/pumpingsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="126dp"
        android:layout_toEndOf="@+id/dateTextView"
        android:text="pumpings" />

    <TextView
        android:id="@+id/dateTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(cumulative)"
        android:layout_below="@+id/dateTextView"
        android:layout_alignParentStart="true" />
</RelativeLayout>